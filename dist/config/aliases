# CUSTOM ALIASES

# Common commands
alias ll="ls -lisa"
alias c="clear"
alias cls="clear"
alias ping="ping -c 4"
alias myip="curl http://ipecho.net/plain; echo"
alias update="sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y"
alias df="df -H"
alias reload="exec $BASH"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Tmux
alias tmux_source="tmux source ~/.tmux.conf"

# Git aliases
alias g="git"
alias gs="git status"
alias gp="git push"
alias gb="git branch"
alias gc="git checkout"
alias gd="git diff"

# C/C++
alias m="make"

# Python
alias python="python3"
alias py="python3"
alias py_http='python3 -m http.server 8080'
alias pyvc="python -m venv venv"
alias pyva="source venv/bin/activate"
alias pyvr="rm -rf ./venv"

# Docker
alias d="docker"
alias dprune="docker system prune -af; docker volume prune -f"

# Terraform
alias tf="terraform"

# OpenStack
alias os="openstack"
alias oss="openstack server"
alias osp="openstack project"
