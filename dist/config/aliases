# CUSTOM ALIASES

# Common commands
alias ll="ls -lisa"
alias c="clear"
alias cls="clear"
alias e="exit"
alias h="history"
alias ping="ping -c 4"
alias myip="curl http://ipecho.net/plain; echo"
alias update="sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y"
alias df="df -H"
alias shred="shred -u -z"
alias ssh="ssh -v -o 'IdentitiesOnly=yes'"
alias reload="exec $BASH"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Tmux
alias tmux_source="tmux source ~/.tmux/tmux.conf"

# Git aliases
alias g="git"
alias gs="git status"
alias gp="git push"
alias gb="git branch"
alias gc="git checkout"
alias gd="git diff"

# C/C++
alias m="make"
alias cm="cmake"

# Python
alias python="python3"
alias p="python3"
alias py="python3"
alias py_http='python3 -m http.server 8080'
alias py_venv="python -m venv venv && source ./venv/bin/activate"

# Docker
alias d="docker"
alias dr="docker run"
alias di="docker image"
alias dv="docker volume"
alias dc="docker compose"

# Terraform
alias tf="terraform"

# OpenStack
alias os="openstack"
alias osa="openstack allocation"
alias osp="openstack project"
alias oss="openstack server"
alias osi="openstack image"

# Kubernetes
alias k="kubectl"

# Jira
if command -v jira >/dev/null 2>&1; then
    alias jira_issues='jira issue list -s~Done -a$(jira me)'
    alias jira_epics='jira issue list -tEpic -a$(jira me)'
fi
